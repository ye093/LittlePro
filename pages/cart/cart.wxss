/* 商品*/

.margin-divider {
  height: 18rpx;
  width: 100%;
}

.pay-container-divider {
  height: 88rpx;
}

/* 商品每一项*/

.card-item {
  height: 60rpx;
  color: white;
  display: flex;
  flex-flow: row wrap;
  justify-content: space-between;
  align-items: center;
  background-color: white;
  padding: 20rpx;
  border-bottom: 1rpx solid #e5e5e5;
}

.card-item-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.card-item-mid {
  flex-grow: 1;
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-left: 25rpx;
}

.card-item-mid image {
  width: 30rpx;
  height: 45rpx;
  background-color: yellowgreen;
}

.card-item-mid text {
  color: black;
  margin-left: 20rpx;
  font-size: 26rpx;
}

.card-item-right {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.item-qty {
  color: darkgray;
  font-size: 24rpx;
}

.item-price {
  color: #ff6701;
  font-size: 26rpx;
}

.pay-container {
  height: 88rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: white;
  border-top: 1rpx solid #e5e5e5;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
}

.pay-container-left {
  flex-grow: 1;
  display: inline-flex;
  flex-flow: row nowrap;
  align-items: center;
}

.pay-container-left switch {
  margin-left: 20rpx;
}

.pay-container-left text {
  margin-left: 20rpx;
  font-size: 28rpx;
}

.pay-container-right {
  display: inline-flex;
  flex-flow: row nowrap;
  align-items: center;
  height: 100%;
}

.pay-container-right .sum {
  font-size: 36rpx;
}

.pay-container-right .amount {
  font-size: 36rpx;
  color: #ff6701;
}

.payment-parent {
  margin-left: 20rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  height: 100%;
  background-color: #ff6701;
  display: inline-flex;
  flex-flow: row nowrap;
  align-items: center;
}

.pay-container-right .payment {
  font-size: 42rpx;
  color: white;
}
